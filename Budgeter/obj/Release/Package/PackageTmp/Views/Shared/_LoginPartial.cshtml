@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()
    <ul id="menu-top" class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("Household", "Index", "Household")</li>
        @if (ViewBag.Invitations > 0)
        {
            <li><a href="@Url.Action("Invitations","Household")">Invitations(@ViewBag.Invitations)</a></li>
        }
        else
        {
            <li><a href="@Url.Action("Invitations","Household")">Invitations(0) </a></li>
        }

        <li>
            <a href="@Url.Action("Index","Manage")">@ViewBag.DisplayName</a>
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul id="menu-top" class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
     </ul>
}
