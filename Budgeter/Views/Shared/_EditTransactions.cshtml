@model Budgeter.Models.Transactions

<hr />
    <h4>Edit Transaction</h4>
    <!--Editable Table-->
    <table id="eTable-2" class="table table-bordered table-condensed table-striped">
        <thead>
            <tr>
                <th>Description</th>
                <th>Category</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td id="description">@Html.DisplayFor(model => model.Description)</td>
                <td>
                    @Html.DropDownList("CategoryId", ViewBag.categoryList as SelectList, new { @class="form-control"})
                </td>
                <td id="amount">@Html.DisplayFor(model => model.Amount)</td>
            </tr>
        </tbody>
    </table>
    <button id="submit-changes" class="btn btn-default pull-right" data-aId="@Model.AccountId" data-id="@Model.id">Submit Changes</button>
    <a href="#" class="closeEdit btn btn-primary pull-right">Cancel</a>
    <br />

<script>
    $('#eTable-2').editableTableWidget({
        editor: $('<input>'),
        preventColumns: [2, 3, 4]
    });
</script>